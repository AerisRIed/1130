# Perl includes required for this script
use strict;
use warnings;
use Carp;
use English;
use Cwd qw(abs_path);
use lib ('./lib');
use Params;

my $PREFIX = $cfg_dir;
my $RESULTS;

if (defined $ARGV[0]) {
  $RESULTS = abs_path($ARGV[0]);
} elsif (-e -f -r "waves.shm/waves.trn") {
  $RESULTS = "$ENV{PWD}";
} else {
  croak "debby ERROR: no argument provided.  Usage is % debby <results/diag_run_dir>";
}

if (-e "$RESULTS/ida_database_test") {
  system("indago -input $PREFIX/scripts/indy.wsf -db $RESULTS/ida_database_test");
} else {
  system("simvision -64bit -input $PREFIX/scripts/debby.svcf $RESULTS/waves.shm");
}

