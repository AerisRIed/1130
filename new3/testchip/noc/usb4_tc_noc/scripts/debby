eval '(exit $?0)' && eval 'exec /usr/xtensa/stools-8.0/bin/perl -w -S $0 ${1+"$@"}' 
    & eval 'exec /usr/xtensa/stools-8.0/bin/perl -w -S $0 $argv:q'
    if 0;


